{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": false
  },
  "include": ["src/scripts/**/*", "src/utils/**/*", "src/data/**/*"],
  "exclude": ["node_modules"]
}